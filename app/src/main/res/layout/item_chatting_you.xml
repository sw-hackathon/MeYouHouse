<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/item_chatting_you_cv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="200dp"
        app:cardCornerRadius="5dp"
        app:contentPadding="10dp"
        android:layout_marginVertical="10dp"
        android:layout_marginStart="40dp"
        app:cardBackgroundColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/item_chatting_you_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="네~ 좋습니다^^" />


    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/item_chatting_you_date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="dhgn"
        android:layout_marginVertical="10dp"
        android:textColor="@color/gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_chatting_you_cv"
        app:layout_constraintStart_toStartOf="@id/item_chatting_you_cv"/>

</androidx.constraintlayout.widget.ConstraintLayout>